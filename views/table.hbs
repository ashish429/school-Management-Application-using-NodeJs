<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Table</title>
        <link rel="stylesheet" href="css/table.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
</head>

<body>
    <nav class="navbar navbar-light bg-primary">
        <div class="container-fluid">
            <h1>Result Management System</h1>
            <div class="d-flex">
                <button action="/" method="get" class="btn btn-danger mx-3">Logout</button>
            </div>
        </div>
    </nav>
    <div class="container-fluid main-body">
        <div class="row  mt-4 mb-2">
            <div>
                <input type="button" action="/add" method="post" class="btn btn-primary"
                    style="float: right; margin-right: 5%;border-radius: 8px;" value=" Add Record">
            </div>
            <div>
                <h6 style="margin-left:130px ;">Total {{records.length}} students</h6>
            </div>
        </div>
        <div class="row table-container mb-3">
            <table>
                <tr>
                    <th>Roll No.</th>
                    <th>Name</th>
                    <th>Date Of Birth</th>
                    <th>Score</th>
                    <th>Actions</th>
                </tr>
                <tr *ngIf="records.length===0; else elseBlock">
                    <td colspan="7">No Record Exists...</td>
                </tr>
                <ng-template #elseBlock>
                    <tr *ngFor="let data of records">
                        <td>{{data.rollNo}}</td>
                        <td>{{data.name}}</td>
                        <td>{{data.dob}}</td>
                        <td>{{data.score}}</td>
                        <td>
                            <span style="padding-left: 20px;"></span>
                            <button class="btn btn-success" value="Edit"
                                routerLink="/teacher/updateDetails/{{data.rollNo}}"><i
                                    class="fa fa-pencil"></i></button>
                            <span style="padding-left: 20px;"></span>
                            <button class="btn btn-danger" style="margin-left: 35px;" value="Delete"
                                (click)="delete(data.rollNo)"><i class="fa fa-trash"></i></button>
                        </td>
                    </tr>
                </ng-template>
            </table>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
        crossorigin="anonymous"></script>
</body>

</html>